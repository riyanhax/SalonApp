<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="8dp"
    android:layout_marginBottom="5dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/natural_graduated_bob"
        android:id="@+id/style_pic"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/style_pic"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/hair_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Natural Graduated Bob"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:maxLines="2"
            android:ellipsize="end"/>

        <TextView
            android:id="@+id/hair_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Natural Graduated Bob haloo bood sjshsdsdsdj jshd jhsdc jsd jsd sdc jsdc"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="N2000"
            android:textSize="18sp"
            android:textColor="@android:color/holo_red_light"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"/>

    </LinearLayout>

</RelativeLayout>